        font-size: 0.85rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        border: 2px solid transparent;
    }

    .btn-warning {
        background: #f59e0b;
        color: var(--white);
        border-color: #d97706;
    }

        .btn-warning:hover {
            background: #d97706;
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

    .btn-danger {
        background: #dc2626;
        color: var(--white);
        border-color: #b91c1c;
    }

        .btn-danger:hover {
            background: #b91c1c;
            transform: translateY(-2px);
            box-shadow: var(--shadow);
        }

    /* ===== FORMULÁRIOS ===== */
    .formulario-container {
        background: var(--white);
        border-radius: 12px;
        box-shadow: var(--shadow);
        padding: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--primary-blue);
            font-weight: 600;
            font-size: 1rem;
        }

    .form-control {
        width: 100%;
        padding: 0.8rem 1rem;
        border: 2px solid var(--gray-medium);
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: var(--white);
    }

        .form-control:focus {
            outline: none;
            border-color: var(--secondary-blue);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            transform: translateY(-2px);
        }

    /* ===== ESTILOS ESPECÍFICOS PARA VIEWBAGS (SELECTS) ===== */
    select.form-control {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%231e40af' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0.5rem center;
        background-repeat: no-repeat;
        background-size: 1.5em 1.5em;
        padding-right: 2.5rem;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        cursor: pointer;
    }

        /* Cores e bordas específicas para diferentes ViewBags */
        select.form-control option {
            background: var(--white);
            color: var(--text-dark);
            padding: 0.5rem;
        }

        /* Estilo quando há opções selecionadas */
        select.form-control:valid {
            border-color: var(--accent-green);
            background-color: var(--light-green);
        }

        select.form-control option:checked {
            background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-blue) 100%);
            color: var(--white);
            font-weight: 600;
        }

        select.form-control option:hover {
            background: var(--light-blue) !important;
            color: var(--primary-blue);
        }

    /* ===== ESTILOS DIFERENCIADOS PARA CADA TIPO DE VIEWBAG ===== */
    /* ViewBag de Usuários */
    select[name="Id_Usuario"] {
        border-left: 4px solid var(--primary-blue);
    }

        select[name="Id_Usuario"]:focus {
            border-left-color: var(--accent-green);
        }

    /* ViewBag de Clientes */
    select[name="CPF_Cli"] {
        border-left: 4px solid var(--accent-green);
    }

        select[name="CPF_Cli"]:focus {
            border-left-color: var(--primary-blue);
        }

    /* ViewBag de Origem/Destino */
    select[name="Id_Origem"],
    select[name="Id_Destino"] {
        border-left: 4px solid var(--secondary-blue);
    }

        select[name="Id_Origem"]:focus,
        select[name="Id_Destino"]:focus {
            border-left-color: var(--accent-green);
        }

    /* ViewBag de Transporte */
    select[name="Id_Transp"] {
        border-left: 4px solid #f59e0b;
    }

        select[name="Id_Transp"]:focus {
            border-left-color: var(--primary-blue);
        }

    /* ViewBag de Hospedagem */
    select[name="Id_Hospedagem"] {
        border-left: 4px solid #8b5cf6;
    }

        select[name="Id_Hospedagem"]:focus {
            border-left-color: var(--accent-green);
        }

    /* ViewBag de Pagamento */
    select[name="Id_Pagamento"] {
        border-left: 4px solid #10b981;
    }

        select[name="Id_Pagamento"]:focus {
            border-left-color: var(--primary-blue);
        }

    /* ViewBag de Passeio */
    select[name="Id_Passeio"] {
        border-left: 4px solid #f97316;
    }

        select[name="Id_Passeio"]:focus {
            border-left-color: var(--secondary-blue);
        }

    .form-check {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem;
        background: var(--gray-light);
        border-radius: 8px;
        border: 2px solid var(--gray-medium);
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        margin: 0;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: var(--accent-green);
            border-color: var(--accent-green);
        }

    .form-check-label {
        margin: 0;
        color: var(--text-dark);
        font-weight: 500;
        cursor: pointer;
    }

    /* ===== GRUPO DE BOTÕES DO FORMULÁRIO ===== */
    .grupo-botoes {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 2px solid var(--gray-medium);
        flex-wrap: wrap;
    }

    /* ===== MODAL DE CONFIRMAÇÃO ===== */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 2000;
    }

    .modal-content {
        background: var(--white);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: var(--shadow-lg);
        max-width: 400px;
        width: 90%;
        text-align: center;
        border: 3px solid var(--accent-green);
    }

    .modal-botoes {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 1.5rem;
    }

    /* ===== ESTADOS VAZIOS ===== */
    .estado-vazio {
        text-align: center;
        padding: 3rem 2rem;
        color: var(--gray-dark);
        background: var(--white);
        border-radius: 12px;
        box-shadow: var(--shadow);
        border: 2px dashed var(--gray-medium);
    }

        .estado-vazio i {
            font-size: 4rem;
            color: var(--gray-medium);
            margin-bottom: 1rem;
        }

        .estado-vazio h3 {
            color: var(--primary-blue);
            margin-bottom: 1rem;
        }


    .tabela-pedidos {
        min-width: 900px;
    }

    }

