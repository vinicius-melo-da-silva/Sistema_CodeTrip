@model IEnumerable<CodeTrip.Models.Pedido>

@{
    ViewData["Title"] = "Lista de Pedidos";
}

<h2>Lista de Pedidos</h2>

<div class="mb-3">
    <a asp-action="CadastrarPedido" class="btn btn-primary">Cadastrar Novo Pedido</a>
    <a asp-controller="Home" asp-action="MenuSistema" class="btn btn-secondary">Voltar ao Menu Principal</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>Cliente</th>
            <th>Origem</th>
            <th>Destino</th>
            <th>Data Início</th>
            <th>Data Fim</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id_Pedido</td>
                <td>@item.Id_Usuario</td>
                <td>@item.CPF_Cli</td>
                <td>@item.Id_Origem</td>
                <td>@item.Id_Destino</td>
                <td>@(item.Data_Inicio?.ToString("yyyy-MM-dd"))</td>
                <td>@(item.Data_Fim?.ToString("yyyy-MM-dd"))</td>
                <td>@(item.Ativo ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="EditarPedido" asp-route-id="@item.Id_Pedido" class="btn btn-warning btn-sm">Editar</a>

                    <a asp-action="ExcluirPedido"
                       asp-route-id="@item.Id_Pedido"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Tem certeza que deseja excluir este pedido?');">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    <style >
    /* ===== ESTILOS ESPECÍFICOS PARA PÁGINAS DE PEDIDOS ===== */
    .pagina-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
        animation: fadeInUp 0.6s ease-out;
    }

    .titulo-pagina {
