@model CodeTrip.Models.Pedido

<header>
    <link href="~/css/crud.css" rel="stylesheet" />
</header>

<div class="formulario">
    <div class="menu">
        <img src="~/src/imagens/logo_nome.png" alt="Logo Codetrip" class="logo" />
        <h1>Cadastrar Pedido</h1>
    </div>
    <div class="col-md-4">
        <form asp-action="CadastrarPedido" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id_Usuario" class="control-label">Usuário</label>
                <select asp-for="Id_Usuario" class="form-control" asp-items="@ViewBag.Usuarios" required>
                    <option value="">-- Selecione um usuário --</option>
                </select>
                <span asp-validation-for="Id_Usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CPF_Cli" class="control-label">Cliente</label>
                <select asp-for="CPF_Cli" class="form-control" asp-items="@ViewBag.Clientes" required>
                    <option value="">-- Selecione um cliente --</option>
                </select>
                <span asp-validation-for="CPF_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Origem" class="control-label">Origem da Viagem</label>
                <select asp-for="Id_Origem" class="form-control" asp-items="@ViewBag.Origens" required>
                    <option value="">-- Selecione a origem --</option>
                </select>
                <span asp-validation-for="Id_Origem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Destino" class="control-label">Destino da Viagem</label>
                <select asp-for="Id_Destino" class="form-control" asp-items="@ViewBag.Destinos" required>
                    <option value="">-- Selecione o destino --</option>
                </select>
                <span asp-validation-for="Id_Destino" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data_Inicio" class="control-label">Data Início</label>
                <input asp-for="Data_Inicio" type="date" class="form-control" required />
                <span asp-validation-for="Data_Inicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data_Fim" class="control-label">Data Fim</label>
                <input asp-for="Data_Fim" type="date" class="form-control" required />
                <span asp-validation-for="Data_Fim" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Transp" class="control-label">Transporte</label>
                <select asp-for="Id_Transp" class="form-control" asp-items="@ViewBag.Transportes" required>
                    <option value="">-- Selecione um transporte --</option>
                </select>
                <span asp-validation-for="Id_Transp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_End_Transporte" class="control-label">Endereço do Transporte</label>
                <select asp-for="Id_End_Transporte" class="form-control" asp-items="@ViewBag.End_Transportes" required>
                    <option value="">-- Selecione um endereço --</option>
                </select>
                <span asp-validation-for="Id_End_Transporte" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Hospedagem" class="control-label">Hospedagem</label>
                <select asp-for="Id_Hospedagem" class="form-control" asp-items="@ViewBag.Hospedagens" required>
                    <option value="">-- Selecione uma hospedagem --</option>
                </select>
                <span asp-validation-for="Id_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Pagamento" class="control-label">Pagamento</label>
                <select asp-for="Id_Pagamento" class="form-control" asp-items="@ViewBag.Pagamentos" required>
                    <option value="">-- Selecione um pagamento --</option>
                </select>
                <span asp-validation-for="Id_Pagamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Passeio" class="control-label">Passeio</label>
                <select asp-for="Id_Passeio" class="form-control" asp-items="@ViewBag.Passeios" required>
                    <option value="">-- Selecione um passeio --</option>
                </select>
                <span asp-validation-for="Id_Passeio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Ativo" class="form-check-input" type="checkbox" checked />
                    <label asp-for="Ativo" class="form-check-label">Pedido Ativo</label>
                </div>
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>

            <div class="botoes">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar para Pedidos</a>
                <a asp-area="" asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}