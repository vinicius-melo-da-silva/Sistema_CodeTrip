@model CodeTrip.Models.Pedido
@{
    ViewData["Title"] = "Cadastrar Pedido";
}

<h2>Cadastrar Pedido</h2>

<form asp-action="CadastrarPedido" method="post">
    <div class="form-group">
        <label>Usuário</label>
        <select asp-for="Id_Usuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
    </div>

    <div class="form-group">
        <label>Cliente</label>
        <select asp-for="CPF_Cli" class="form-control" asp-items="ViewBag.Clientes"></select>
    </div>

    <div class="form-group">
        <label>Origem</label>
        <select asp-for="Id_Origem" class="form-control" asp-items="ViewBag.Origem"></select>
    </div>

    <div class="form-group">
        <label>Destino</label>
        <select asp-for="Id_Destino" class="form-control" asp-items="ViewBag.Destino"></select>
    </div>

    <div class="form-group">
        <label>Data Início</label>
        <input asp-for="Data_Inicio" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Data Fim</label>
        <input asp-for="Data_Fim" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Transporte</label>
        <select asp-for="Id_Transp" class="form-control" asp-items="ViewBag.Transporte"></select>
    </div>

    <div class="form-group">
        <label>Endereço Transporte</label>
        <select asp-for="Id_End_Transporte" class="form-control" asp-items="ViewBag.EndTransporte"></select>
    </div>

    <div class="form-group">
        <label>Hospedagem</label>
        <select asp-for="Id_Hospedagem" class="form-control" asp-items="ViewBag.Hospedagem"></select>
    </div>

    <div class="form-group">
        <label>Pagamento</label>
        <select asp-for="Id_Pagamento" class="form-control" asp-items="ViewBag.Pagamento"></select>
    </div>

    <div class="form-group">
        <label>Passeio</label>
        <select asp-for="Id_Passeio" class="form-control" asp-items="ViewBag.Passeio"></select>
    </div>

    <div class="form-group form-check">
        <input asp-for="Ativo" class="form-check-input" />
        <label class="form-check-label">Pedido Ativo</label>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
