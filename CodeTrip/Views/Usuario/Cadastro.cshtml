@model CodeTrip.Models.Usuario
@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<div class="container mt-4">
    <h2 class="text-center">Cadastro de Usuário</h2>
    <hr />

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success">@TempData["Mensagem"]</div>
    }

    <form asp-action="Cadastro" method="post">
        <div class="form-group mb-3">
            <label for="Nome_Usuario">Nome</label>
            <input asp-for="Nome_Usuario" class="form-control" placeholder="Digite seu nome" />
            <span asp-validation-for="Nome_Usuario" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Email_Usuario">Email</label>
            <input asp-for="Email_Usuario" class="form-control" placeholder="Digite seu email" />
            <span asp-validation-for="Email_Usuario" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Senha_Usuario">Senha</label>
            <input asp-for="Senha_Usuario" type="password" class="form-control" placeholder="Digite a senha" />
            <span asp-validation-for="Senha_Usuario" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Role">Tipo de Usuário</label>
            <select asp-for="Role" class="form-control">
                <option value="Comum">Comum</option>
                <option value="Colaborador">Colaborador</option>
                <option value="Admin">Admin</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label>Ativo</label>
            <input asp-for="Ativo" type="checkbox" checked /> Ativo
        </div>

        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Login">Voltar</a>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
