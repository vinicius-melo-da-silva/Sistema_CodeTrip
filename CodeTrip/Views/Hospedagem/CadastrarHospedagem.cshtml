@model CodeTrip.Models.Hospedagem;

<header>
    <link href="~/css/crud.css" rel="stylesheet" />
</header>

<div class="formulario">
    <div class="menu">
        <img src="~/src/imagens/logo_nome.png" alt="Logo Codetrip" class="logo" />
        <h1>Cadastrar Hospedagem</h1>
    </div>
    <div class="col-md-4">
        <form asp-action="CadastrarHospedagem" class="form-prod">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_Hospedagem" class="control-label">Nome da Hospedagem</label>
                <input asp-for="Nome_Hospedagem" class="form-control" />
                <span asp-validation-for="Nome_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Tipo_Hospedagem" class="control-label">Tipo de Hospedagem</label>
                <select asp-for="Id_Tipo_Hospedagem" class="form-control" asp-items="@ViewBag.TiposHospedagem">
                    <option value="">-- Selecione um tipo --</option>
                </select>
                <span asp-validation-for="Id_Tipo_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id_Pensao" class="control-label">Tipo de Pensão</label>
                <select asp-for="Id_Pensao" class="form-control" asp-items="@ViewBag.TiposPensao">
                    <option value="">-- Selecione uma pensão --</option>
                </select>
                <span asp-validation-for="Id_Pensao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Logradouro_Endereco_Hospedagem" class="control-label">Logradouro</label>
                <input asp-for="Logradouro_Endereco_Hospedagem" class="form-control" />
                <span asp-validation-for="Logradouro_Endereco_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Numero_Endereco_Hospedagem" class="control-label">Número</label>
                <input asp-for="Numero_Endereco_Hospedagem" class="form-control" />
                <span asp-validation-for="Numero_Endereco_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bairro_Endereco_Hospedagem" class="control-label">Bairro</label>
                <input asp-for="Bairro_Endereco_Hospedagem" class="form-control" />
                <span asp-validation-for="Bairro_Endereco_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Complemento_Endereco_Hospedagem" class="control-label">Complemento</label>
                <input asp-for="Complemento_Endereco_Hospedagem" class="form-control" />
                <span asp-validation-for="Complemento_Endereco_Hospedagem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade_Nome" class="control-label">Cidade</label>
                <select asp-for="Cidade_Nome" class="form-control" asp-items="@ViewBag.Cidades">
                    <option value="">-- Selecione uma cidade --</option>
                </select>
                <span asp-validation-for="Cidade_Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UF_Estado" class="control-label">Estado</label>
                <select asp-for="UF_Estado" class="form-control" asp-items="@ViewBag.Estados">
                    <option value="">-- Selecione um estado --</option>
                </select>
                <span asp-validation-for="UF_Estado" class="text-danger"></span>
            </div>

            <div class="botoes">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar para Hospedagem</a>
                <a asp-area="" asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
            </div>
        </form>
    </div>
</div>