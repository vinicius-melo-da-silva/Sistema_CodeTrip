@model CodeTrip.Models.Cliente;

<header>
    <link href="~/css/crud.css" rel="stylesheet" />
</header>

<div class="formulario">
    <div class="menu">
        <img src="~/src/imagens/logo_nome.png" alt="Logo Codetrip" class="logo" />
        <h1>Editar Cliente</h1>
    </div>

    <div class="col-md-4">
        <form asp-action="EditarCliente" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id_Cli" />

            <div class="form-group">
                <label asp-for="Nome_Cli" class="control-label">Nome Completo</label>
                <input asp-for="Nome_Cli" class="form-control" required />
                <span asp-validation-for="Nome_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email_Cli" class="control-label">E-mail</label>
                <input asp-for="Email_Cli" type="email" class="form-control" required />
                <span asp-validation-for="Email_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data_Nasc_Cli" class="control-label">Data de Nascimento</label>
                <input asp-for="Data_Nasc_Cli" type="date" class="form-control" required />
                <span asp-validation-for="Data_Nasc_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CPF_Cli" class="control-label">CPF</label>
                <input asp-for="CPF_Cli" class="form-control cpf-mask" readonly />
                <span asp-validation-for="CPF_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefone_Cli" class="control-label">Telefone</label>
                <input asp-for="Telefone_Cli" class="form-control telefone-mask" required />
                <span asp-validation-for="Telefone_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Logradouro_Cli" class="control-label">Logradouro</label>
                <input asp-for="Logradouro_Cli" class="form-control" required />
                <span asp-validation-for="Logradouro_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Numero_Cli" class="control-label">Número</label>
                <input asp-for="Numero_Cli" class="form-control" required />
                <span asp-validation-for="Numero_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bairro_Cli" class="control-label">Bairro</label>
                <input asp-for="Bairro_Cli" class="form-control" required />
                <span asp-validation-for="Bairro_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Complemento_Cli" class="control-label">Complemento</label>
                <input asp-for="Complemento_Cli" class="form-control" />
                <span asp-validation-for="Complemento_Cli" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade_Nome" class="control-label">Cidade</label>
                <select asp-for="Cidade_Nome" class="form-control" asp-items="@ViewBag.Cidades" required>
                    <option value="">-- Selecione uma cidade --</option>
                </select>
                <span asp-validation-for="Cidade_Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UF_Estado" class="control-label">Estado</label>
                <select asp-for="UF_Estado" class="form-control" asp-items="@ViewBag.Estados" required>
                    <option value="">-- Selecione um estado --</option>
                </select>
                <span asp-validation-for="UF_Estado" class="text-danger"></span>
            </div>

            <div class="botoes">
                <input type="submit" value="Alterar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar para Cliente</a>
                <a asp-area="" asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.cpf-mask').inputmask('999.999.999-99');
            $('.telefone-mask').inputmask('(99) 99999-9999');
        });
    </script>
}