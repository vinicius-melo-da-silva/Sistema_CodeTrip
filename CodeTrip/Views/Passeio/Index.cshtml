@model IEnumerable<CodeTrip.Models.Passeio>

<header>
    <div class="menu">
        <link href="~/css/crud_lista.css" rel="stylesheet" />
        <script src="~/js/site.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <img src="~/src/imagens/logo_nome.png" alt="Logo Codetrip" class="logo" />
        <h1>Passeios</h1>
    </div>
    <div class="menu">
        <a asp-controller="Passeio" asp-action="CadastrarPasseio" class="btn btn-outline-primary">Cadastrar Passeio</a>
        <a asp-area="" asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
    </div>
</header>

<html>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome_Passeio)</th>
                <th>@Html.DisplayNameFor(model => model.Desc_Passeio)</th>
                <th>@Html.DisplayNameFor(model => model.Valor_Passeio)</th>
                <th>@Html.DisplayNameFor(model => model.Duracao_Passeio)</th>
                <th>@Html.DisplayNameFor(model => model.Cidade_Nome)</th>
                <th>@Html.DisplayNameFor(model => model.UF_Estado)</th>
                <th>@Html.DisplayNameFor(model => model.Ativo)</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome_Passeio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Desc_Passeio)</td>
                    <td>@item.Valor_Passeio.ToString("C")</td>
                    <td>@Html.DisplayFor(modelItem => item.Duracao_Passeio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cidade_Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.UF_Estado)</td>
                    <td>@(item.Ativo ? "Sim" : "Não")</td>
                    <td class="actions">
                        @Html.ActionLink("Editar", "EditarPasseio", new { id = item.Id_Passeio }, new { @class = "btn btn-sm btn-info" })
                        |
                        <button href="#" class="btn btn-sm btn-danger" onclick="confirmarExclusaoPasseio(@item.Id_Passeio)">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

<script>
    function confirmarExclusaoPasseio(id) {
        Swal.fire({
            title: 'Tem certeza?',
            text: "Você não poderá reverter isso!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sim, excluir!',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("Excluir", "Passeio")?id=' + id;
            }
        })
    }
</script>