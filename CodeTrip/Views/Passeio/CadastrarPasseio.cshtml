@model CodeTrip.Models.Passeio

@{
    ViewData["Title"] = "Cadastrar Passeio";
}

<h1>Cadastrar Passeio</h1>

<form asp-action="CadastrarPasseio" method="post">
    <div class="form-group">
        <label asp-for="Nome_Passeio"></label>
        <input asp-for="Nome_Passeio" class="form-control" />
        <span asp-validation-for="Nome_Passeio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Desc_Passeio"></label>
        <textarea asp-for="Desc_Passeio" class="form-control"></textarea>
        <span asp-validation-for="Desc_Passeio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valor_Passeio"></label>
        <input asp-for="Valor_Passeio" class="form-control" />
        <span asp-validation-for="Valor_Passeio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duracao_Passeio"></label>
        <input asp-for="Duracao_Passeio" class="form-control" />
        <span asp-validation-for="Duracao_Passeio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cidade_Nome"></label>
        <input asp-for="Cidade_Nome" class="form-control" />
        <span asp-validation-for="Cidade_Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UF_Estado"></label>
        <input asp-for="UF_Estado" class="form-control" />
        <span asp-validation-for="UF_Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
