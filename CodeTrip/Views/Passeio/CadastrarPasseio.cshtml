@model CodeTrip.Models.Passeio

<header>
    <link href="~/css/crud.css" rel="stylesheet" />
</header>

<div class="formulario">

    <div class="menu">
        <img src="~/src/imagens/logo_nome.png" alt="Logo Codetrip" class="logo" />
        <h1>Cadastrar Passeio</h1>
    </div>

    <div class="col-md-4">
        <form asp-action="CadastrarPasseio" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_Passeio" class="control-label">Nome do Passeio</label>
                <input asp-for="Nome_Passeio" class="form-control" required />
                <span asp-validation-for="Nome_Passeio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desc_Passeio" class="control-label">Descrição</label>
                <textarea asp-for="Desc_Passeio" class="form-control" required></textarea>
                <span asp-validation-for="Desc_Passeio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor_Passeio" class="control-label">Valor</label>
                <input asp-for="Valor_Passeio" class="form-control" required />
                <span asp-validation-for="Valor_Passeio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Duracao_Passeio" class="control-label">Duração (horas)</label>
                <input asp-for="Duracao_Passeio" class="form-control" required />
                <span asp-validation-for="Duracao_Passeio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade_Nome" class="control-label">Cidade</label>
                <select asp-for="Cidade_Nome" class="form-control" asp-items="@ViewBag.Cidades" required>
                    <option value="">-- Selecione uma cidade --</option>
                </select>
                <span asp-validation-for="Cidade_Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UF_Estado" class="control-label">Estado</label>
                <select asp-for="UF_Estado" class="form-control" asp-items="@ViewBag.Estados" required>
                    <option value="">-- Selecione um estado --</option>
                </select>
                <span asp-validation-for="UF_Estado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Ativo" class="form-check-input" type="checkbox" checked />
                    <label asp-for="Ativo" class="form-check-label">Passeio Ativo</label>
                </div>
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>

            <div class="botoes">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar para Passeios</a>
                <a asp-area="" asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}