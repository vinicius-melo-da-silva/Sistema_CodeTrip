@model CodeTrip.Models.Transporte

<header>
    <link href="~/css/crud.css" rel="stylesheet" />
</header>

<div class="formulario">
    <div class="menu">
        <img src="~/src/imagens/logo_nome.png" class="logo" />
        <h1>Editar Transporte</h1>
    </div>

    <div class="col-md-4">
        <form asp-action="EditarTransporte" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id_Transp" />

            <div class="form-group">
                <label asp-for="Tipo_Transp"></label>
                <input asp-for="Tipo_Transp" class="form-control" />
            </div>

            <div class="form-group">
                <label>Estado:</label>
                <select asp-for="UF_Estado" class="form-control" asp-items="@ViewBag.Estados">
                    <option value="">-- Selecione um Estado --</option>
                </select>
            </div>

            <div class="botoes">
                <input type="submit" value="Alterar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Voltar para Transporte</a>
                <a asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Menu Principal</a>
            </div>
        </form>
    </div>
</div>
