@model IEnumerable<CodeTrip.Models.Transporte>

<header>
    <div class="menu">
        <link href="~/css/crud_lista.css" rel="stylesheet" />
        <img src="~/src/imagens/logo_nome.png" alt="Logo Codetrip" class="logo" />
        <h1>Transporte</h1>
    </div>

    <div class="menu">
        <a asp-controller="Transporte" asp-action="CadastrarTransporte" class="btn btn-outline-primary">Cadastrar Transporte</a>
        <a asp-controller="Home" asp-action="MenuSistema" class="btn btn-outline-dark">Voltar ao Menu Principal</a>
    </div>
</header>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tipo_Transp)</th>
            <th>@Html.DisplayNameFor(model => model.UF_Estado)</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Tipo_Transp</td>
                <td>@item.UF_Estado</td>
                <td>
                    @Html.ActionLink("Editar", "EditarTransporte", new { id = item.Id_Transp }, new { @class = "btn btn-info btn-sm" })
                    |
                    <button onclick="confirmarExclusaoTransporte(@item.Id_Transp)" class="btn btn-danger btn-sm">Excluir</button>
                </td>
            </tr>
        }
    </tbody>
</table>
